                <div class="google-plus"><a href="#" target="_blank" ><i class="fab fa-google-plus"></i></a></div>
                <div class="facebook"><a href="https://www.facebook.com/The-Newspanel-172833856644680/?modal=admin_todo_tour" target="_blank" ><i class="fa fa-facebook" aria-hidden="true"></i></a></div>
                <div class="bottom"></div>
              </div>
            </div>
          </div>
          <!-- </div> -->
        </div>
        <div class="">
          <li> <p>Copyright &copy 2018 <%= link_to "-", author_session_path %>  <b>The NewsPanel</b><%= link_to ".", new_author_registration_path %></p>
        </div>
      </footer>
  </body>
</html>
