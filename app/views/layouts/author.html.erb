      <% end %>
  </head>

  <body>
    <script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '133367770708729',
      xfbml      : true,
      version    : 'v2.11'
    });
    FB.AppEvents.logPageView();
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
    <%= render 'layouts/navbar' %>
    <!-- <% if notice || alert %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <% end %> -->
    <div class="container <%= controller_name %> <%= action_name %> ">
        <% if flash.any? %>
          <% flash.keys.each do |key| %>
            <div class="alert alert-<%= key.to_s %> alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <%= flash[key] %>
              </div>
          <% end %>
        <% end %>
      <%= yield %>
    </div>
    <br>
    <footer>
      <div id="connect" class="container-fluid padding">
        <!-- <div class="row text-center padding"> -->
          <div class="col-12">
            <h2><p>Follow Us</p></h2>
          </div>
          <div class=" socialCube">
            <div class="wrap">
              <div class="cube">
                <div class="top"></div>
                <div class="twitter"><a href="https://twitter.com/The_Newspanel" target="_blank" ><i class="fa fa-twitter" aria-hidden="true"></i></a></div>
